<p id="notice"><%= notice %></p>

<h1>Rides</h1>

<table>
  <thead>
    <tr>
      <th>Carno</th>
      <th>Cartype</th>
      <th>Driverphn</th>
      <th>Destination</th>
      <th>Seats</th>
      <th>Time</th>
      <th>Complete</th>
      <th>Seatsleft</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.carno %></td>
        <td><%= ride.cartype %></td>
        <td><%= ride.driverphn %></td>
        <td><%= ride.destination %></td>
        <td><%= ride.seats %></td>
        <td><%= ride.time %></td>
        <td><%= ride.complete %></td>
        <td><%= ride.seatsleft %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

