<!DOCTYPE html>
<html>
  <head>
    <title>Web 18-17</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  <% if flash[:error] %>
  <div id="error">
    <%= flash[:error] %>
  </div>
<% end %>
<div id="container">
<div class="ui top inverted menu">
  <a href="#" class="item"><strong>RidersPool</strong></a>
<%= link_to "Home", root_path, class: "active blue item" %>
<%= link_to "Rides", rides_path, class: "active red item" %>
<%= link_to "Bookings", bookings_path, class: "active green item" %>
  <div id="user_status"></div>
    <% if user_signed_in? %>
      Welcome <%= current_user.email %>! Not you?     
     <%= link_to "User Management", user_index_path %>
     <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
     <% elsif customer_signed_in? %>
     <%if current_customer.ban==true %>
    <%= render 'banned' %>
    <%else%><div class="right menu">
     Welcome <%= current_customer.email %>! Not you?
     <%= link_to "Customer HomePage", customers_path %>
     <%= link_to 'Posts', posts_path %><br>
    <%= link_to "Sign out", destroy_customer_session_path, method: :delete %>
    </div>
    <%end%>  

    
     <% else %>
     <div class="right menu">
      <%= link_to "Sign up(customer)", new_customer_path %> or
      <%= link_to "Sign in(admin)", new_user_session_path %>
      <%= link_to "Sign in(customer)", new_customer_session_path %>
    <% end %>
    </div>
</div>
  




<%if current_customer==nil||current_customer.ban!=true %>
  <%= yield %>
  <%end%>
    <a href="https://validator.w3.org/nu/?doc=<%= request.original_url %>">Syntax Validation</a><br>
    <%= link_to "Issue Tracker", "https://trello.com/b/V7d0Dsly/web18-17" %> <br>
  </body>
</html>
