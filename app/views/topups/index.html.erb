<p id="notice"><%= notice %></p>

<h1>Topups</h1>
<% if user_signed_in? %>
<table><table class="ui celled table">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Customer email</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topups.each do |topup| %>
      <tr>
        <td data-label><%= topup.customer.name %></td>
        <td data-label><%= topup.customer.email %></td>
        <td><%= topup.balance %></td>
        <td><%= link_to 'Show', topup %></td>
        <td><%= link_to 'Edit', edit_topup_path(topup) %></td>
        <td><%= link_to 'Destroy', topup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="ui button">
<%= link_to 'New Topup', new_topup_path %>
</button>
<%else %>
<%= render 'noauth' %>
<% end %> 