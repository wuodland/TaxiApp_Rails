<h1>User#index</h1>
<p>Find me in app/views/user/index.html.erb</p>
<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Ban</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.role %></td>
        <td><%= customer.ban %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Ban', ban_path(customer) %></td>
        <td><%= link_to 'Unban', unban_path(customer) %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

