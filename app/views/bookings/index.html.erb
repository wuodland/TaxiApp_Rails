<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table><table class="ui celled table">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Destination</th>
      <th>Ride ID</th>
      <th>Driver Phone</th>
      <th>Vehicle Reg No</th>
      <th>Vehicle Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td data-label><%= booking.customer.name %></td>
        <td data-label><%= booking.destination %></td>
        <td data-label><%= booking.ride.id %></td>
        <td data-label><%= booking.driverphn %></td>
        <td data-label><%= booking.carno %></td>
        <td data-label><%= booking.cartype %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

